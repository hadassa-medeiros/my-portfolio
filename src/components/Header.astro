---
import Translator from "../lib/translator";

const { lang, aboutMe, otherLang, otherSlug } = Astro.props;
const translator = new Translator(lang);
---

<header>
  <nav>
    <p>{otherSlug}</p>
    <ul>
      <button>
        <a class="langSwitcher" href={`/${lang}`}>
          {translator.t("ABOUT")}
        </a>
      </button>
      <button>
        <a class="langSwitcher" href={`/${otherLang}/${otherSlug}`}>
          {otherLang} | {lang}
        </a>
      </button>
      <!-- <button>
        <a href={`/${lang}/projects`}>
          {translator.t("PROJECTS")}
        </a>
      </button> -->
    </ul>
  </nav>
</header>
